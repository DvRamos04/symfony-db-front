{% set male = gender.male|default(0) %}
{% set female = gender.female|default(0) %}
{% set other = gender.other|default(0) %}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"><title>ETL Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <style>
    body{font-family:system-ui,Segoe UI,Roboto,Arial;margin:24px}
    header{display:flex;gap:12px;align-items:center;margin-bottom:16px}
    table{border-collapse:collapse;width:100%;margin:16px 0}
    th,td{border:1px solid #ddd;padding:8px;text-align:left}
    th{background:#f5f5f5}
    .grid{display:grid;grid-template-columns:1fr 1fr;gap:24px}
  </style>
</head>
<body>
<header>
  <h2>ETL Dashboard</h2>
  <form method="get">
    <label>Execution:</label>
    <select name="exec" onchange="this.form.submit()">
      {% for e in execs %}
        <option value="{{ e.id }}" {{ selected==e.id ? "selected" }}>
          #{{ e.id }} - {{ e.run_date }}
        </option>
      {% endfor %}
    </select>
  </form>
</header>

<section class="grid">
  <div><canvas id="genderChart"></canvas></div>
  <div><canvas id="ageChart"></canvas></div>
</section>

<h3>Operating Systems (table)</h3>
<table>
  <thead><tr><th>OS</th><th>Total</th></tr></thead>
  <tbody>
  {% for k,v in os %}
    <tr><td>{{ k }}</td><td>{{ v }}</td></tr>
  {% endfor %}
  </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const genderData = { labels:["male","female","other"], datasets:[{ label:"Gender", data:[{{ male }}, {{ female }}, {{ other }}] }] };
new Chart(document.getElementById("genderChart"), { type:"pie", data: genderData });

const ageLabels = {{ ages|keys|json_encode|raw }};
const ageVals   = {{ ages|values|json_encode|raw }};
new Chart(document.getElementById("ageChart"), { type:"bar", data:{ labels: ageLabels, datasets:[{ label:"Age ranges", data: ageVals }] } });
</script>
</body>
</html>
